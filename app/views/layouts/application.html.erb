<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "NewSpeak" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Rails Devise" %>">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
  <div id="wrap">
    <div id="main" class="container clear-top">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <div class="navbar-brand"></div>
          </div>
          <div class="collapse navbar-collapse" id="navbar-collapse">
            <ul class="nav navbar-nav navbar-left">
              <li><%= link_to('NEWSPEAK', root_path) %></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% if(current_user) %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <%= current_user.email %> <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to('LOG OUT', sign_out_path) %></li>
                </ul>
              </li>
              <% end %>
              <% if(!current_user) %>
                  <li><%=  link_to('LOG IN', sign_in_path) %></li>
                  <li><%=  link_to('REGISTER', registration_path) %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
      <div class="row">
        <div class="col-lg-12">
         <%= bootstrap_flash %>
         <%= yield %>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
